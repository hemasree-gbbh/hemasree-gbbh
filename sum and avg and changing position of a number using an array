#include <stdio.h>

int main() {
    int arr[30],i,n,sum=0,p,avg;
    printf("How many students are in the class?");
scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        printf("Enter the student marks:");
        scanf("%d",&arr[i]);
    
sum=sum+arr[i];
avg=sum/n;
}
printf("\nSum of the marks of the students are %d:",sum);
printf("\naverage of the marks of the students are %d:",avg);
printf("\nFor which student we need to correct?");
scanf("%d",&p);
printf("What is the actual score?");
scanf("%d",&arr[p-1]);
sum=0;
for(i=0;i<n;i++)
    {
    
sum=sum+arr[i];
avg=sum/n;
}
printf("\nSum of the marks of the students are %d:",sum);
printf("\naverage of the marks of the students are %d:",avg);
}
