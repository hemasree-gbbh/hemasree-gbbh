include<stdio.h>
 char a[20];
 void main()
{
    printf("enter your word:");
    gets(a);
    int len=strlen(a)-1;
    for( int i=0,j=len;i<=j;i++,j++)
   {
     if(a[i]!=a[j])


   {


          printf("the given word is  not palindrome");
          return;
     }


         printf("the given word is  a palindrome");
     }



}



